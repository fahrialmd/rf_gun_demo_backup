<mvc:View
    controllerName="rfgundemo.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <MessageStrip
                id="validationMessageStrip"
                showCloseButton="true"
                showIcon="true"
                type="Information"
                visible="false"
            />
            <f:SimpleForm
                id="responsiveForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="2"
                emptySpanL="2"
                emptySpanM="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                class="sapUiTinyMargin"
            >
                <Label
                    text="Plant"
                    labelFor="plantInput"
                />
                <Input
                    id="plantInput"
                    placeholder="Plant"
                    required="true"
                    showValueHelp="true"
                    valueHelpRequest=".onPlantValueHelp"
                    liveChange=".onInputLiveChange"
                    submit=".onPlantSubmit"
                    showValueStateMessage="false"
                />

                <Label
                    text="Warehouse Type"
                    labelFor="warehouseTypeInput"
                />
                <Input
                    id="warehouseTypeInput"
                    placeholder="Warehouse Type"
                    required="true"
                    showValueHelp="true"
                    valueHelpRequest=".onWarehouseTypeValueHelp"
                    liveChange=".onInputLiveChange"
                    submit=".onWarehouseTypeSubmit"
                    showValueStateMessage="false"
                />
                <Label
                    text="Counting Method"
                    labelFor="countingMethodSelect"
                />
                <Select
                    id="countingMethodSelect"
                    visible="false"
                    autoAdjustWidth="true"
                    forceSelection="true"
                >
                    <core:Item
                        key="1"
                        text="1. Item Wise"
                    />
                    <core:Item
                        key="2"
                        text="2. Vendor Wise"
                    />
                    <core:Item
                        key="3"
                        text="3. Location Wise"
                    />
                </Select>
            </f:SimpleForm>
        </content>

        <footer>
            <Toolbar visible="{device>/system/phone}">
                <ToolbarSpacer />
                <Text text="F1=Logout" />
                <ToolbarSpacer />
                <Text text="F2=Reset" />
                <ToolbarSpacer />
                <Text text="F3=Back" />
                <ToolbarSpacer />
                <Text text="F7=Help" />
                <ToolbarSpacer />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>

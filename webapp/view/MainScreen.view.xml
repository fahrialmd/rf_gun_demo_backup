<mvc:View
    controllerName="rfgundemo.controller.MainScreen"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page
        title="SMR Demo Apps"
        id="mainScreenPage"
    >
        <VBox
            class="sapUiSmallMargin"
            justifyContent="Center"
            alignItems="Center"
            fitContainer="true"
        >
            <Label
                text="Purchase Order (Scan)"
                labelFor="purchaseOrderNumber"
            />

            <Input
                placeholder="Purchase Order"
                id="purchaseOrderNumber"
                required="true"
                submit=".onPurchaseOrderSubmit"
                showSuggestion="true"
                filterSuggests="true"
                startSuggestion="1"
                suggestionItems="{purchaseOrderHistory>/purchaseOrderHistoryNo}"
                maxLength="10"
            >
                <suggestionItems>
                    <SuggestionItem text="{purchaseOrderNo}" />
                </suggestionItems>
            </Input>
        </VBox>
    </Page>
</mvc:View>

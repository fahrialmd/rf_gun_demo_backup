<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="rfgundemo.controller.DataDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
>
    <Page
        id="dataDetailPage"
        title="SMR Demo Apps"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <List
            id="orderList"
            mode="MultiSelect"
            items="{
                path: '/ZR_RF_PO_ITEM_MAIN'
            }"
        >
            <headerToolbar>
                <Toolbar>
                    <Title
                        text="{= 'Order Details for ' + ${purchaseOrder>/purchaseOrderNumber} }"
                    />
                    <ToolbarSpacer />
                    <Button
                        id="saveAndPostButton"
                        icon="sap-icon://save"
                        press=".onsaveAndPostButtonPress"
                        text="Save and Post"
                        type="Emphasized"
                    />
                </Toolbar>
            </headerToolbar>

            <CustomListItem>
                <HBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Line No"
                            labelFor="purchaseOrderItemNoInput"
                        />
                        <Input
                            id="purchaseOrderItemNoInput"
                            value="{PurchaseOrderItemNo}"
                            editable="false"
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Material"
                            labelFor="materialInput"
                        />
                        <Input
                            id="materialInput"
                            value="{Material}"
                            editable="false"
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Material Desc"
                            labelFor="materialDescriptionInput"
                        />
                        <Input
                            id="materialDescriptionInput"
                            value="{MaterialDescription}"
                            editable="false"
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Quantity Suggest"
                            labelFor="quantitySuggestInput"
                        />
                        <Input
                            id="quantitySuggestInput"
                            value="{QuantitySuggest}"
                            editable="false"
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Quantity Receive"
                            labelFor="quantityReceiveInput"
                        />
                        <Input
                            id="quantityReceiveInput"
                            value=""
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Plant"
                            labelFor="plantInput"
                        />
                        <Input
                            id="plantInput"
                            value="{Plant}"
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Storage Location"
                            labelFor="storageLocationInput"
                        />
                        <Input
                            id="storageLocationInput"
                            value="{StorageLocation}"
                        />
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                        <Label
                            text="Confirm Status"
                            labelFor="confirmStatusButton"
                        />
                        <Button
                            id="confirmStatusButton"
                            text="OK"
                            width="100%"
                        />
                    </VBox>
                </HBox>
            </CustomListItem>
        </List>
    </Page>
</mvc:View>

<!--
    Data Detail View
    Purpose: Displays detailed line item data for a selected Purchase Order.
    Includes table layout for desktop and carousel layout for phones, plus a toolbar with action
buttons.
    Includes table layout for desktop and carousel layout for phones, plus a toolbar with action
buttons.
-->
<mvc:View
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    controllerName="rfgundemo.controller.DataDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
>
    <!--
        Main page container with title and navigation button.
        Provides padding and responsive behavior.
    -->
    <Page
        id="dataDetailPage"
        title="SMR Demo Apps"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <!--
            Subheader toolbar with page title and "Save and Post" action button.
        -->
        <subHeader>
            <Toolbar>
                <Title
                    id="orderDetailsTitle"
                    text="Order Details"
                    class="sapUiTinyMarginBegin"
                />
                <ToolbarSpacer />
                <Button
                    id="saveAndPostButton"
                    icon="sap-icon://save"
                    press=".onSaveAndPostButtonPress"
                    text="Save and Post"
                    type="Emphasized"
                    class="sapUiTinyMarginEnd"
                />
            </Toolbar>
        </subHeader>

        <!--
            Table to display Purchase Order line items for desktop/tablet users.
            Uses multi-selection and OData list binding.
        -->
        <Table
            id="orderTable"
            mode="MultiSelect"
            items="{path: '/ZR_RF_PO_ITEM_MAIN'}"
            items="{path: '/ZR_RF_PO_ITEM_MAIN'}"
            inset="false"
            class="sapUiResponsiveContentPadding"
            visible="{= !${device>/system/phone} }"
        >
            <!--
                Table Columns (Desktop/Tablet view).
                Each column displays a specific field from the PO line item.
            -->
            <columns>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="3.5rem"
                    hAlign="Center"
                >
                    <Text text="No" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    visible="false"
                    hAlign="Center"
                >
                    <Text text="Material" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    visible="false"
                    hAlign="Center"
                >
                    <Text text="Material Desc" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="17rem"
                    hAlign="Center"
                >
                    <Text text="Material" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="7rem"
                    hAlign="Center"
                >
                    <Text text="Quantity Suggest" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="7rem"
                    hAlign="Center"
                >
                    <Text text="Quantity Receive" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="3.5rem"
                    hAlign="Center"
                >
                    <Text text="Unit" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="7rem"
                    hAlign="Center"
                >
                    <Text text="Plant" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="7rem"
                    hAlign="Center"
                >
                    <Text text="Storage Location" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    hAlign="Center"
                >
                    <Text text="Attachment" />
                </Column>
                <Column
                    demandPopin="true"
                    minScreenWidth="Tablet"
                    width="5rem"
                    hAlign="Center"
                >
                    <Text text="Confirm" />
                </Column>
            </columns>

            <!--
                Table Row Items
                Each row corresponds to one Purchase Order item.
            -->
            <items>
                <ColumnListItem>
                    <cells>
                        <Input
                            value="{PurchaseOrderItemNo}"
                            editable="false"
                            width="100%"
                        />
                        <Input
                            value="{Material}"
                            editable="false"
                            visible="false"
                        />
                        <Input
                            value="{MaterialDescription}"
                            editable="false"
                            visible="false"
                        />
                        <Input
                            value="{Material} {MaterialDescription}"
                            editable="false"
                            width="100%"
                        />
                        <Input
                            value="{QuantitySuggest}"
                            editable="false"
                            width="100%"
                            liveChange=".onLiveChangeCheckNumber"
                        />
                        <Input
                            value=""
                            width="100%"
                            liveChange=".onLiveChangeCheckNumber"
                        />
                        <Input
                            value="{PurchaseOrderQuantityUnit}"
                            editable="false"
                            width="100%"
                        />
                        <Input
                            value="{Plant}"
                            width="100%"
                            showValueHelp="true"
                            valueHelpRequest="onPlantVHRequest"
                            showValueHelp="true"
                            valueHelpRequest="onPlantVHRequest"
                        />
                        <Input
                            value="{StorageLocation}"
                            width="100%"
                            showValueHelp="true"
                            valueHelpRequest="onStrLocVHRequest"
                        />
                        <HBox
                            width="100%"
                            wrap="Wrap"
                        >
                            <Button
                                icon="sap-icon://upload"
                                class="sapUiTinyMarginEnd"
                                press="onUpload"
                            />
                            <Button
                                icon="sap-icon://download"
                                class="sapUiTinyMarginEnd"
                                press="onDownload"
                            />
                            <Button
                                text="{filename}"
                                type="Transparent"
                            />
                        </HBox>

                        <ToggleButton
                            text="OK"
                            press=".onOkButtonPress"
                            width="100%"
                            type="Emphasized"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <!--
            Carousel for displaying Purchase Order line items on phones.
            Uses a card-style layout for small screens.
        -->
        <Carousel
            id="orderCarousel"
            pages="{path: '/ZR_RF_PO_ITEM_MAIN'}"
            pages="{path: '/ZR_RF_PO_ITEM_MAIN'}"
            visible="{device>/system/phone}"
            arrowsPlacement="PageIndicator"
            pageChanged=".onCarouselPageChanged"
        >
            <pages>
                <VBox class="sapUiSmallMargin">
                    <items>
                        <!-- Line No -->
                        <VBox class="sapUiSmallMargin">
                            <Label text="Line No:" />
                            <Input
                                value="{PurchaseOrderItemNo}"
                                editable="false"
                            />
                        </VBox>

                        <!-- Material and Description -->
                        <HBox class="sapUiSmallMargin">
                            <VBox
                                class="sapUiSmallMarginEnd"
                                visible="false"
                            >
                                <Label text="Material:" />
                                <Input
                                    value="{Material}"
                                    editable="false"
                                />
                            </VBox>
                            <VBox visible="false">
                            <VBox visible="false">
                                <Label text="Material Desc:" />
                                <Input
                                    value="{MaterialDescription}"
                                    editable="false"
                                />
                            </VBox>
                            <VBox width="100%">
                                <Label text="Material" />
                                <Input
                                    value="{Material} {MaterialDescription}"
                                    editable="false"
                                />
                            </VBox>
                            <VBox width="100%">
                                <Label text="Material" />
                                <Input
                                    value="{Material} {MaterialDescription}"
                                    editable="false"
                                />
                            </VBox>
                        </HBox>

                        <!-- Quantity Suggest and Receive -->
                        <HBox class="sapUiSmallMargin">
                            <VBox class="sapUiSmallMarginEnd">
                                <Label text="Quantity Suggest:" />
                                <Input
                                    value="{QuantitySuggest}"
                                    editable="false"
                                    liveChange=".onLiveChangeCheckNumber"
                                />
                            </VBox>
                            <VBox>
                                <Label text="Quantity Receive:" />
                                <Input
                                    value=""
                                    liveChange=".onLiveChangeCheckNumber"
                                />
                            </VBox>
                        </HBox>

                        <!-- Unit -->
                        <VBox class="sapUiSmallMargin">
                            <Label text="Unit:" />
                            <Input
                                value="{PurchaseOrderQuantityUnit}"
                                editable="false"
                            />
                        </VBox>

                        <!-- Plant -->
                        <VBox class="sapUiSmallMargin">
                            <Label text="Plant:" />
                            <Input
                                value="{Plant}"
                                showValueHelp="true"
                                valueHelpRequest="onPlantVHRequest"
                            />
                        </VBox>

                        <!-- Storage Location -->
                        <VBox class="sapUiSmallMargin">
                            <Label text="Storage Location:" />
                            <Input
                                value="{StorageLocation}"
                                showValueHelp="true"
                                valueHelpRequest="onStrLocVHRequest"
                            />
                        </VBox>

                        <!-- Attachment Button -->
                        <HBox class="sapUiSmallMargin">
                            <Button
                                icon="sap-icon://upload"
                                class="sapUiTinyMarginEnd"
                                press="onUpload"
                            />
                            <Button
                                icon="sap-icon://download"
                                class="sapUiTinyMarginEnd"
                                press="onDownload"
                            />
                        </HBox>

                        <!-- Confirm Button -->
                        <HBox class="sapUiSmallMargin">
                            <ToggleButton
                                text="OK"
                                press=".onOkButtonPress"
                                width="100%"
                                type="Emphasized"
                            />
                            <Button
                                text="{filename}"
                                type="Transparent"
                            />
                        </HBox>
                    </items>
                </VBox>
            </pages>
        </Carousel>

        <!--
            Footer bar with keyboard shortcut hints for phone users.
        -->
        <footer>
            <OverflowToolbar>
                <HBox visible="{= !${device>/system/phone} }" class="sapUiContentPadding">
                    <Button id="messagePopoverBtn"
                        visible="{=!!${message>/}.length}"
                        icon="{
                        parts: ['message>/'],
                        formatter: '.getButtonIcon'
                    }"
                        type="{
                        parts: ['message>/'],
                        formatter: '.getButtonType'
                    }"
                        text="{
                        parts: ['message>/'],
                        formatter: '.getMessageCount'
                    }"
                        press="onShowMessagePopover"
                        ariaHasPopup="Dialog" />
                </HBox>
                <!-- Phone keyboard shortcuts - only visible on phone devices -->
                <HBox
                    visible="{device>/system/phone}"
                    class="sapUiContentPadding"
                    width="100%"
                    justifyContent="Center"
                >
                    <Text
                        text="Back (F3)"
                        class="sapUiSmallMargin"
                        textAlign="Center"
                    />
                    <Text
                        text="Next (F5)"
                        class="sapUiSmallMargin"
                        textAlign="Center"
                    />
                    <Text
                        text="Previous (F6)"
                        class="sapUiSmallMargin"
                        textAlign="Center"
                    />
                    <Text
                        text="(un)Confirm (F7)"
                        class="sapUiSmallMargin"
                        textAlign="Center"
                    />
                    <Text
                        text="Save (F8)"
                        class="sapUiSmallMargin"
                        textAlign="Center"
                    />
                </HBox>

                <ToolbarSpacer />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>